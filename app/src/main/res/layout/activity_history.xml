<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_president"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tih.myquiz.President"
    android:background="@drawable/history">

    <TextView
        android:text="History Questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:textColor="#283593"
        android:textSize="16sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="70dp"
        android:layout_centerInParent="true">



        <TextView
            android:text="When was South Africas first democratic elections? "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView5"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:textColor="#1A237E"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg1">

            <RadioButton
                android:text="1994"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/D1"
                android:layout_weight="1" />

            <RadioButton
                android:text="1990"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/D2"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="Which President spent 27 years in prison?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView6"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:textColor="#1A237E"
            android:padding="15dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg2">

            <RadioButton
                android:text="Thabo Mbeki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a1"
                android:layout_weight="1" />

            <RadioButton
                android:text="Nelson Mandela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a2"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="Which Party did Nelson Mandela belong to?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:textColor="#1A237E"
            android:padding="15dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg3">

            <RadioButton
                android:text="DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r1"
                android:layout_weight="1" />

            <RadioButton
                android:text="ANC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="Your History Your Future"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViw6"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#283593"
            android:textSize="20sp"
            android:padding="40dp"
            />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/historybtn"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/msa"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
