<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tih.myquiz.Result"
    android:background="@drawable/blue">

    <TextView
        android:text="Let's See if You Really Know Your Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/lets"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer1"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer2"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct3"
        android:text="Correct Answer: English"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/question3"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer3"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language Questions"
        android:padding="10dp"
        android:id="@+id/headtopic1"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/lets"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question1"
        android:text="How many official languages are in South Africa?"
        android:layout_below="@+id/headtopic1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question2"
        android:text="Which language dominates the most?"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/headtopic1"
        android:layout_alignStart="@+id/headtopic1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question3"
        android:layout_marginTop="11dp"
        android:text="What is the first language"
        android:padding="5dp"
        android:layout_below="@+id/youranswer2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Wanna Try Again?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:id="@+id/buttonq"
        android:textSize="12sp" />

    <TextView
        android:text="Thank you For Participating.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:fontFamily="cursive"
        android:layout_above="@+id/buttonq"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your Score is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/scoreL"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct1"
        android:text="Correct Answer: 11"
        android:layout_below="@+id/question1"
        android:layout_alignRight="@+id/correct3"
        android:layout_alignEnd="@+id/correct3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct2"
        android:text="Correct Answer: Zulu"
        android:layout_below="@+id/question2"
        android:layout_alignRight="@+id/correct3"
        android:layout_alignEnd="@+id/correct3" />


</RelativeLayout>
