<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tih.myquiz.Result"
    android:background="@drawable/blue">


    <TextView
        android:text="Let's See if You Really Know Your Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/lets"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Questions"
        android:padding="10dp"
        android:id="@+id/headtopic1"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/lets"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question1"
        android:layout_marginTop="11dp"
        android:text="When was South Africas first democratic elections?"
        android:layout_below="@+id/headtopic1"
        android:layout_alignRight="@+id/lets"
        android:layout_alignEnd="@+id/lets" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct1"
        android:text="Correct Answer: 1994"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/question1"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct2"
        android:text="Correct Answer: Nelson Mandela"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/question2"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer2"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct3"
        android:text="Correct Answer: ANC"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/question3"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer3"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question2"
        android:layout_marginTop="13dp"
        android:text="Which President spent 27 years in prison?"
        android:padding="5dp"
        android:layout_below="@+id/youranswer1"
        android:layout_alignRight="@+id/question1"
        android:layout_alignEnd="@+id/question1"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question3"
        android:layout_marginTop="12dp"
        android:text="Which Party did Nelson Mandela belong to?"
        android:padding="5dp"
        android:layout_below="@+id/youranswer2"
        android:layout_alignRight="@+id/question2"
        android:layout_alignEnd="@+id/question2" />

    <Button
        android:text="Wanna Try Again?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/question1"
        android:layout_alignStart="@+id/question1"
        android:id="@+id/buttonq1"
        android:textSize="12sp" />

    <TextView
        android:text="Thank you For Participating.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:fontFamily="cursive"
        android:layout_above="@+id/buttonq1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your Answer is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/scoreH"
        android:textSize="24sp"
        android:layout_below="@+id/lets"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You did not choose anything"
        android:id="@+id/youranswer1"
        android:textColor="#B71C1C"
        android:layout_below="@+id/correct1"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
